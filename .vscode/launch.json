{
  "version": "0.2.0",
  "configurations": [
    
    {
      "type": "node",
      "request": "launch",
      "name": "Debug TypeScript (ts-node)",
      "program": "${workspaceFolder}/src/server.ts",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}
